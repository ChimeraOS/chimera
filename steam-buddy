#!/usr/bin/env python3
import os
import bottle
from steam_buddy import server
from steam_buddy.config import RESOURCE_DIR, FTP_SERVER

if __name__ == '__main__':
	os.chdir(RESOURCE_DIR)
	FTP_SERVER.run()
	port = os.environ.get("STEAM_BUDDY_PORT", 8844)
	bottle.run(app=server, host='0.0.0.0', port=port)
